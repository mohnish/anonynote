<div id="container">
  <div class="alert"><%= flash[:message] %></div>
  <h3 class="title">Enter your content below</h3>
  <form id="content-submit" name="content-submit" method="post" action="/new/create">
    <input id="title" name="title" type="text" size="100" placeholder="Enter your title here..." required = "true" /> <br/>
    <textarea id="content" name="content" rows="30" cols="100"
              placeholder="Enter your content here..." required = "true"></textarea><br/>
    <input id="submit" name="submit" type="submit" class="button orange" value="Create" formnovalidate="true" />
  </form>
</div>