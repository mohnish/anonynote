<div class="alert"><%= flash[:message] %></div>
<h3 class="title">Enter your content below</h3>
<form id="content-submit" name="content-submit" method="post" action="/new/create">
  <input id="title" name="title" type="text" size="100" maxlength="100"
         placeholder="Enter your title here..." required /> <br/>
  <textarea id="content" name="content" rows="20" cols="150"
            placeholder="Enter your content here..." required></textarea><br/>
  <input id="submit" name="submit" type="submit" value="Create" />
</form>